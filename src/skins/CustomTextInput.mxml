<?xml version="1.0" encoding="utf-8"?>
<s:SparkSkin xmlns:fx="http://ns.adobe.com/mxml/2009" xmlns:s="library://ns.adobe.com/flex/spark"
    xmlns:fb="http://ns.adobe.com/flashbuilder/2009" 
    alpha.disabled="0.5" blendMode="normal">

    <fx:Metadata>
    <![CDATA[ 
        [HostComponent("spark.components.TextInput")]
    ]]>
    </fx:Metadata> 
        
    <s:states>
        <s:State name="normal"/>
        <s:State name="disabled"/>
        <s:State name="normalWithPrompt"/>
        <s:State name="disabledWithPrompt"/>
    </s:states>
    
	<s:Rect id="background" left="1" right="1" top="1" bottom="1" height="23">
		<s:fill>
			<s:SolidColor color="#FFFFFF" />
		</s:fill>
	</s:Rect>
	
	<s:Rect left="0" right="0" top="0" bottom="0">
		<s:stroke>
			<s:SolidColorStroke color="0xd1d1d1" weight="1" />
		</s:stroke>
	</s:Rect>  
	
	<s:RichEditableText id="textDisplay" height="19" verticalAlign="middle"
						widthInChars="10" color.disabled="#4b4b4b" color="#4b4b4b"
						left="5" right="5" top="0" bottom="0" />
	
	<s:Label id="promptDisplay" maxDisplayedLines="1" left="5" fontStyle="normal"
			 mouseEnabled="false" mouseChildren="false" verticalCenter="1"
			 includeIn="normalWithPrompt,disabledWithPrompt"
			 includeInLayout="true" color.disabled="#4b4b4b" color="#4b4b4b" />
</s:SparkSkin>
